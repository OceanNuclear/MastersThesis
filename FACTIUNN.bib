@article{BeeColony,
issn = {0144-8420},
abstract = {Occupational neutron fields usually have energies from the thermal range to some MeV and the characterization of the spectra is essential for estimation of the radioprotection quantities. Thus, the spectrum must be unfolded based on a limited number of measurements. This study implemented an algorithm based on the bee colonies behavior, named Artificial Bee Colony (ABC), where the intelligent behavior of the bees in search of food is reproduced to perform the unfolding of neutron spectra. The experimental measurements used Bonner spheres and 6 LiI (Eu) detector, with irradiations using a thermal neutron flux and three reference fields: 241 Am–Be, 252 Cf and 252 Cf (D2O). The ABC obtained good estimation of the expected spectrum even without previous information and its results were closer to expected spectra than those obtained by the SPUNIT algorithm.},
