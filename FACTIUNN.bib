author = {Del Rosario Martinez-Blanco, Ma. and Ornelas-Vargas, Gerardo and Castañeda-Miranda, Celina Lizeth and Solís-Sánchez, Luis Octavio and Castañeda-Miranada, Rodrigo and Vega-Carrillo, Héctor René and Celaya-Padilla, Jose M and Garza-Veloz, Idalia and Martínez-Fierro, Margarita and Ortiz-Rodríguez, José Manuel},
