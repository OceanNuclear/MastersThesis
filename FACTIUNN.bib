language = {eng},
author = {Batistoni, P. and Barbier, D. and Likonen, J.},
keywords = {Fusion Technology ; First Wall Material Erosion ; Transport ; Deposition ; Neutronics and Safety},
}

@article{JETNSpec1983-1999,
